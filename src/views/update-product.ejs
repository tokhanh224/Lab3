<body>
    <main>
        <div class="container mt-5  ">
            <h2 class="mb-4 ">Edit Product</h2>
            <form action="/update-product/<%= product._id %>" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="pro_name" class="form-label">Product Name:</label>
                    <input type="text" class="form-control mb-2" id="pro_name" name="pro_name"  value="<%= product.name %>"required>
                 </div>
                 <div class="mb-3">
                    <label for="pro_price" class="form-label">Product Price:</label>
                    <input type="number" class="form-control mb-2 " id="pro_price" name="pro_price"  value="<%= product.price %>"required>
                  </div>
                  <div class="mb-3">
                    <label for="pro_category" class="form-label">Product Category:</label>
                    <input type="text" class="form-control mb-2 " id="pro_category" name="pro_category"  value="<%= product.category %>">
                  </div> 
                  <div class="mb-4 d-flex justify-content-center">
                    <img id="previewImage" src="/images/<%= product.image %>" alt="Product Image" style="width: 400px; object-fit: cover;">
                </div>
                <div class="d-flex justify-content-center">
                    <div>
                        <label class="btn btn-outline-success" for="pro_file">Choose file</label>
                        <input type="file" class="form-control d-none" id="pro_file" name="pro_file" accept="image/*" onchange="PreviewImage();">
                    </div>
                </div>
                
                <script>
                    function PreviewImage() {
                        var preview = document.getElementById('previewImage');
                        var fileInput = document.getElementById('pro_file');
                        
                        if (fileInput.files && fileInput.files[0]) {
                            var reader = new FileReader();
                            
                            reader.onload = function(e) {
                                preview.src = e.target.result;
                            }
                            
                            reader.readAsDataURL(fileInput.files[0]);
                        } else {
                        }
                    }
                </script>
                                                 
                <button type="submit" class="btn btn-primary ">Submit</button>
            </form>
        </div>    
    </main>

